@model StaticVoid.Blog.Site.Areas.Manage.Models.ConfirmPublishModel

@{
    ViewBag.Title = "Confirm Publish";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Publish <i>@Model.Title</i></h3>
    Publishing this article will make it live on line.
</div>

@using (Html.BeginForm("ConfirmPublish", "PostAuthoring", FormMethod.Post, new { @class = "modal-form" }))
{
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <button class="btn btn-success" type="submit">Publish</button>
    </div>
}
